<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="@dimen/cardview_default_elevation"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:layout_behavior="@string/bottom_sheet_behavior">

    <com.zhy.android.percent.support.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/size_dimen_5">

        <TextView
            android:id="@+id/userName_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天神Deity"
            android:textColor="@color/theme_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/comment_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "1楼"
            android:gravity="center"
            android:textColor="#888888"
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/content_comment"
            android:layout_below="@+id/userName_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:textColor="#666666"
            android:textSize="16sp" />
    </com.zhy.android.percent.support.PercentRelativeLayout>




</android.support.v7.widget.CardView>