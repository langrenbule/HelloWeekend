<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="@dimen/cardview_default_elevation"
    card_view:cardElevation="@dimen/cardview_default_elevation">

    <com.zhy.android.percent.support.PercentLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_logo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/ic_launcher"
                app:layout_widthPercent="20%w" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignBottom="@id/user_logo"
                android:layout_alignTop="@id/user_logo"
                android:gravity="center_vertical"
                app:layout_widthPercent="70%w" />

            <ImageView
                android:id="@+id/item_action_fav"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/ic_action_fav_normal"
                app:layout_widthPercent="10%w" />
        </com.zhy.android.percent.support.PercentLinearLayout>


        <TextView
            android:id="@+id/content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp" />

        <ImageView
            android:id="@+id/content_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:maxHeight="500dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/init_pic"
            android:layout_margin="5dp"
            android:visibility="visible" />


        <com.zhy.android.percent.support.PercentLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:id="@+id/item_action_love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:gravity="center"
                android:text="分享"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/item_action_hate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:drawableLeft="@drawable/ic_action_love"
                android:gravity="center"
                android:text="100"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_action_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dip"
                android:drawableLeft="@drawable/ic_action_love"
                android:gravity="center"
                android:text="985"
                android:textColor="#888888" />
        </com.zhy.android.percent.support.PercentLinearLayout>
    </com.zhy.android.percent.support.PercentLinearLayout>

</android.support.v7.widget.CardView>